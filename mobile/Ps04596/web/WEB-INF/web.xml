<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControllerCustomers</servlet-name>
        <servlet-class>controller.ControllerCustomers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerProducts</servlet-name>
        <servlet-class>controller.ControllerProducts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerCartBean</servlet-name>
        <servlet-class>controller.ControllerCartBean</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>controller.CartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartController</servlet-name>
        <servlet-class>com.giaima.servlet.CartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/servlet/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerCustomers</servlet-name>
        <url-pattern>/ControllerCustomers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerProducts</servlet-name>
        <url-pattern>/ControllerProducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerCartBean</servlet-name>
        <url-pattern>/ControllerCartBean</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/CartServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
